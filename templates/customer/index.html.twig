{% extends 'layout.html.twig' %}
{% block content %}


    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link rel="stylesheet" type="text/css" href="{{ asset('build/CSS/Customer/index.css') }}">
<body>
    <div class="container">
        <div class="row">

            <div></div>


            <div style="margin-top: 50px;" class="col-md-10 col-md-offset-1">

                <div class="panel panel-default panel-table">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col col-xs-6">
                                <a href="{{ path('form_customer') }}">
                                    <button class="btn btn-success">
                                        + Nouveau Client
                                    </button>
                                </a>
                            </div>
                            {#<div class="col col-xs-6 text-right">#}
                                {#<button type="button-success" class="btn btn-sm btn-primary btn-create">Nouveau client</button>#}
                            {#</div>#}
                        </div>
                    </div>
                    <div class="panel-body">
                        <table class="table table-striped table-bordered table-list">
                            <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Prénom</th>
                                <th>Télephone</th>
                                <th>Email</th>
                                <th>Adresse</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for customer in customers %}
                                <tr>
                                    <td>{{ customer.firstname }}</td>
                                    <td>{{ customer.lastname }}</td>
                                    <td>{{ customer.getMobilephone() }}</td>
                                    <td>{{ customer.email }}</td>
                                    <td>{{ customer.adress }}</td>
                                    <td>

                                        <a class="btn btn-default"
                                           href="{{ path('form_customer', { 'id': customer.id }) }}"><em
                                                    class="fa fa-pencil"></em></a>
                                        <a class="btn btn-default"
                                           href="{{ path('customers_show', { 'id': customer.id }) }}"><em
                                                    class="fa fa-eye"></em></a>
                                        <a class="btn btn-danger"
                                           href="{{ path('customers_delete', { 'id': customer.id }) }}"><em
                                                    class="fa fa-trash"></em></a>

                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="col col-xs-4">Page 1 of 5
                            </div>
                            <div class="col col-xs-8">
                                <ul class="pagination hidden-xs pull-right">
                                    <li><a href="#">1</a></li>
                                    <li><a href="#">2</a></li>
                                    <li><a href="#">3</a></li>
                                    <li><a href="#">4</a></li>
                                    <li><a href="#">5</a></li>
                                </ul>
                                <ul class="pagination visible-xs pull-right">
                                    <li><a href="#">«</a></li>
                                    <li><a href="#">»</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</body>

    {% include 'footer.html.twig' %}
{% endblock %}
