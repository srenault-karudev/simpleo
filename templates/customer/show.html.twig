{% extends 'layout.html.twig' %}

{% block content %}
    <link rel="stylesheet" type="text/css" href="{{ asset('build/CSS/newcustomer.css') }}">

    <body>

    <div class="container">
        <div class="jumbotron">
            <a href="{{path('index_customer')}}"><button class="btn btn-success">Retour</button></a>

            <legend>Associé n° {{ customer.id }}</legend>
            {#<a href="{{path('index_customer')}}"><button class="btn btn-success">Retour</button></a>#}
            <div class="row">
                <!-- Start .row -->
                <div class="col-md-12">
                    <dl class="mt20">

                        {% if customer.personType == 'particulier' %}
                            <dt class="text-muted">Nom</dt>
                            <dd>{{ customer.lastname }}</dd>

                            <dt class="text-muted">Prénom</dt>
                            <dd>{{ customer.firstname }}</dd>

                        {% endif %}
                        {% if customer.personType == 'entreprise' %}
                            <dt class="text-muted">Nom de la société</dt>
                            <dd>{{ customer.companyname }}</dd>
                        {% endif %}
                        <dt class="text-muted">Téléphone </dt>
                        <dd>{{ customer.mobilephone }}</dd>

                        <dt class="text-muted">Email</dt>
                        <dd>{{ customer.email }}</dd>

                        <dt class="text-muted">Adresse</dt>
                        <dd>{{ customer.adress }} {{ customer.city }} {{ customer.postcode }} {{ customer.country }}</dd>

                        {% if customer.personType == 'entreprise' %}
                            <dt class="text-muted">N° SIREN</dt>
                            <dd>{{ customer.siren }}</dd>

                            <dt class="text-muted">N° SIRET</dt>
                            <dd>{{ customer.siret }}</dd>

                            <dt class="text-muted">N° TVA Intercommunautaire</dt>
                            <dd>{{ customer.numtva }}</dd>
                        {% endif %}
                        <dt class="text-muted">Fichier</dt>
                        <dd>

                            {#{% dump(customer.image) %}#}
                            {#{% if customer.image is not null %}<a target="_blank" href="{{ vich_uploader_asset(customer, 'imageFile') }}"  />Fichier joint</a>{% endif %}</dd>#}


                    </dl>
                </div>
            </div>




        </div>
    </div>
    </body>

{% include 'footer.html.twig' %}
{% endblock %}