{% extends 'layout.html.twig' %}

{% block title %}{% endblock %}
{% block head %}{% endblock %}
{% block content %}

    <div class="row">
        <!-- Start .row -->
        <div class="col-md-12 sortable-layout">
            <div class="panel panel-default ">
                <!-- Start .panel -->
                <div class="panel-heading">
                    <h4 class="panel-title">Nouveau Client</h4>
                </div>

                <form enctype="multipart/form-data" class="form-horizontal group-border hover-stripped" method="post" role="form" >

                <div class="form-group">
                    {{ form_label(form.firstname, null, { 'label': 'Nom*','label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-2">
                        {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}} ) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.lastname, null, { 'label': 'Prenom*','label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-2">
                        {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}} ) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.adress, null, { 'label': 'Adresse*','label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-2">
                        {{ form_widget(form.adress, {'attr': {'class': 'form-control'}} ) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.email, null, { 'label': 'Email*','label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-2">
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}} ) }}
                    </div>
                </div>

                <div class="mt20">
                    <div class="col-md-12 text-center">
                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                    </div>
                </div>
                {{ form_rest(form) }}

                </form>


            </div>
        </div>
    </div>


{% endblock %}