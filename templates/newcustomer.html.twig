{% extends 'layout.html.twig' %}

{% block title %}{% endblock %}
{% block head %}{% endblock %}
{% block content %}


    <link rel="stylesheet" type="text/css" href="{{ asset('build/CSS/newcustomer.css') }}">

    <div>
        <div class="text-center">
            <h4 class="panel-title">Nouveau Client</h4>
        </div>
    </div>


    <div class="container">
        <div class="row">
            <div class="col-md-6">
                    <form class="">
                        <div class="form-group">
                            <div class="col-md-6 md-offset-3">
                                {{ form_label(form.firstname, null, { 'label': 'Nom*','label_attr': {'class': 'col-sm-2 control-label'} }) }}
                                <div class="col-sm-8">
                                    {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}} ) }}
                                </div>
                            </div>

                        </div>
                        <div class="form-group">
                            {{ form_label(form.email, null, { 'label': 'Email*','label_attr': {'class': 'col-sm-2 control-label'} }) }}
                            <div class="col-sm-7">
                                {{ form_widget(form.email, {'attr': {'class': 'form-control'}} ) }}

                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.adress, null, { 'label': 'Adresse*','label_attr': {'class': 'col-sm-4 control-label'} }) }}
                            <div class="col-sm-7">
                                {{ form_widget(form.adress, {'attr': {'class': 'form-control'}} ) }}
                            </div>
                        </div>
                    </form>
            </div>
            <div class="col-md-6 col-md-offset-3">
                <div class="well well-sm">
                    <form class="form-horizontal">
                        <div class="form-group">
                            {{ form_label(form.lastname, null, { 'label': 'Prenom*','label_attr': {'class': 'col-sm-2 control-label'} }) }}
                            <div class="col-sm-7">
                                {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}} ) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.mobilephone, null, { 'label': 'N° de tétéphone*','label_attr': {'class': 'col-sm-4 control-label'} }) }}
                            <div class="col-sm-7">
                                {{ form_widget(form.mobilephone, {'attr': {'class': 'form-control'}} ) }}
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <div class="text-center">
        <button href="#" type="submit" class="btn btn-primary">Enregistrer</button>
    </div>




{% endblock %}