{% extends 'layout_homepage.html.twig' %}

{% block title %}{% endblock %}
{% block head %}{% endblock %}
{% block content %}

    <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link rel="stylesheet" type="text/css" href="{{ asset('build/CSS/contactUs.css') }}">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="well well-sm">
                    <form class="form-horizontal" action="" method="post">
                        <fieldset>
                            <legend class="text-center">Nous contacter</legend>


                            <!-- Email input-->
                            <div class="form-group">
                                {{ form_label(form.email, null, { 'label': 'Email*','label_attr': {'class': 'col-sm-1 control-label'} }) }}
                                <div class="col-sm-12">
                                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}} ) }}
                                </div>
                            </div>

                            <!-- Mobilephone input -->
                            <div class="form-group">
                                {{ form_label(form.object, null, { 'label': 'Objet*','label_attr': {'class': 'col-lg-1 control-label'} }) }}
                                <div class="col-sm-12">
                                    {{ form_widget(form.object, {'attr': {'class': 'form-control'}} ) }}
                                </div>
                            </div>

                            <!-- Message body -->
                            <div class="form-group">
                                {{ form_label(form.message, null, { 'label': 'Message*','label_attr': {'class': 'col-sm-1 control-label'} }) }}
                                <div class="col-sm-12">
                                    {{ form_widget(form.message, {'attr': {'class': 'col-sm-12 form-control','rows': '9'}, } ) }}
                                </div>
                            </div>

                            {{ form_rest(form) }}

                            <!-- Form actions -->
                            <div class="form-group">
                                <div class="col-md-12 text-right">
                                    <button href="#" type="submit" class="btn btn-primary">Envoyer</button>
                                </div>

                             {{ form_end(form) }}

                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>



{% endblock %}