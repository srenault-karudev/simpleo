{% extends 'layout.html.twig' %}
{% block content %}


    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link rel="stylesheet" type="text/css" href="{{ asset('build/CSS/Customer/index.css') }}">
    <body>

    <div class="row">

        <div></div>


        <div style="margin-top: 50px;" class="col-md-10 col-md-offset-1">

            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-xs-6">
                            <a href="{{ path('new_invoice_buy') }}">
                                <button  class="btn btn-success">
                                    + Nouvel Achat
                                </button>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-list">
                        <thead>
                        <tr>
                            <th>Numero</th>
                            <th>Date Facture</th>
                            <th>Date de saisie</th>
                            <th>Fournisseur</th>
                            <th>Prix HT</th>
                            <th>Prix TTC</th>
                            <th>Payé</th>
                            <th>Actions</th>

                        </tr>
                        </thead>
                        <tbody style="text-align: center">
                        {% for invoice in properties %}
                            <tr>
                                <td class="centerDiv">{{ invoice.id }}</td>
                                <td>{{ invoice.date  |date("d/m/Y") }}</td>
                                <td>{{ invoice.entryDate  |date("d/m/Y") }}</td>
                                <td>{{ invoice.client }}</td>
                                <td>{{ invoice.getPriceHt() }} €</td>
                                <td>{{ invoice.getPriceTt() }} €</td>
                                <td>
                                    {% if invoice.stateOfPaiement == false  %}
                                        <img style="height: 25px" class="social-media" src="{{ asset('build/img/icone-croix-rouge-png-3.png') }}" alt="linkedin">

                                    {% else %}
                                            <img style="height: 20px" class="social-media" src="{{ asset('build/img/success_icon-icons.com_52365.png') }}" alt="linkedin">
                                    {% endif %}
                                </td>
                                <td>
                                    <a class="btn btn-default"
                                       href="{{ path('invoice_show', { 'id': invoice.id }) }}"
                                    ><em
                                                class="fa fa-eye"></em></a>
                                    {#<a class="btn btn-default"#}
                                       {#href="{{ path('invoice_file', { 'id': invoice.id }) }}">#}
                                    {#<em#}
                                                {#class="fa fa-file-pdf-o"></em></a>#}

                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                    <div style="text-align: center">
                        {{ knp_pagination_render(properties) }}
                    </div>


                </div>
            </div>
        </div>
    </div>
    </body>

    {% include 'footer.html.twig' %}
{% endblock %}
