{% extends 'layout.html.twig' %}
{% block content %}


    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link rel="stylesheet" type="text/css" href="{{ asset('build/CSS/Customer/index.css') }}">
    <body>

    <div class="row">

        <div></div>


        <div style="margin-top: 50px;" class="col-md-10 col-md-offset-1">

            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-xs-6">
                            <a href="{{ path('new_invoice_buy') }}">
                                <button  class="btn btn-success">
                                    + Nouvelle Facture
                                </button>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-list">
                        <thead>
                        <tr>
                            <th>Numero</th>
                            <th>Date</th>
                            <th>Vendeur</th>
                            <th>Prix HT</th>
                            <th>Prix TTC</th>
                            <th>statue</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for invoice in properties %}
                            <tr>
                                <td>{{ invoice.id }}</td>
                                <td>{{ invoice.invoice_date }}</td>
                                <td>{{ invoice.interlocutor}}</td>
                                <td>{{ invoice.ht_price }}</td>
                                <td>{{ invoice.tt_price }}</td>
                                <td>

                                    <a class="btn btn-default"
                                       href="{{ path('form_customer', { 'id': customer.id }) }}"><em
                                                class="fa fa-pencil"></em></a>
                                    <a class="btn btn-default"
                                       href="{{ path('customers_show', { 'id': customer.id }) }}"><em
                                                class="fa fa-eye"></em></a>
                                    <a class="btn btn-danger"
                                       href="{{ path('customers_delete', { 'id': customer.id }) }}"><em
                                                class="fa fa-trash"></em></a>

                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                    <div style="text-align: center">
                        {{ knp_pagination_render(properties) }}
                    </div>


                </div>
            </div>
        </div>
    </div>
    </body>

    {% include 'footer.html.twig' %}
{% endblock %}